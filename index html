    <!-- Script HLS & Plyr -->
    <script src="https://cdn.rawgit.com/video-dev/hls.js/18bb552/dist/hls.min.js"></script>
    <script src="https://cdn.plyr.io/3.7.8/plyr.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const urlParams = new URLSearchParams(window.location.search);
            const videoId = urlParams.get('id');
            
            // Element UI
            const titleEl = document.getElementById('video-title');
            const downloadBtn = document.getElementById('download-btn');
            const playerEl = document.getElementById('player');
            const errorEl = document.getElementById('error-msg');
            const likeEl = document.getElementById('like-count');

            if (!videoId) {
                titleEl.innerText = "Pilih video dari database";
                return;
            }

            try {
                // Load Database
                const res = await fetch('database.json');
                const data = await res.json();
                const video = data.find(item => item.id === videoId);

                if (video) {
                    // Isi Data
                    titleEl.innerText = video.judul;
                    document.title = video.judul;
                    
                    // Random Like Counter (Biar kelihatan hidup kayak di screenshot)
                    likeEl.innerText = Math.floor(Math.random() * 900) + 100;

                    // Setup Download
                    if (video.download) {
                        downloadBtn.href = video.download;
                        downloadBtn.style.display = 'inline-flex';
                    }

                    // Setup Player
                    const source = video.stream;
                    if (Hls.isSupported() && source.includes('.m3u8')) {
                        const hls = new Hls();
                        hls.loadSource(source);
                        hls.attachMedia(playerEl);
                    } else {
                        playerEl.src = source;
                    }

                    // Init Plyr (Warna Pink)
                    new Plyr(playerEl, {
                        controls: ['play-large', 'play', 'progress', 'current-time', 'mute', 'fullscreen'],
                    });

                } else {
                    titleEl.innerText = "Error 404";
                    errorEl.style.display = 'block';
                }

            } catch (err) {
                console.error(err);
                titleEl.innerText = "Gagal memuat data";
            }
        });
    </script>
